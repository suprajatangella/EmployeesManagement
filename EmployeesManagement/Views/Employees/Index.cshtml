@model EmployeesManagement.ViewModels.employeeViewModel

@{
    ViewData["Title"] = "Employees";
}

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>Add New Employee</a>
</p>
<div class="card">
    <div class="card-body">
        <div class="col-md-12">
            <div class="row">
                
                    <form asp-action="Index" enctype="multipart/form-data" method="post" class="form-vertical">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="EmpNo" class="control-label"></label>
                            <input asp-for="EmpNo" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="EmailAddress" class="control-label"></label>
                            <input asp-for="EmailAddress" class="form-control" />
                        </div>
                        <div class="col-md-20">
                            <button type="submit" class="btn btn-success btn-block m-tb-10">
                                <i class="fa fa-search"></i>Search
                            </button>
                        </div>
                        <div class="col-md-20">
                            <button type="button" class="btn btn-default btn-reset m-tb-10">
                                <i class="fa fa-eraser"></i>Clear
                            </button>
                        </div>

                    </div>
                    </form>
                
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Employees List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LeaveOutStandingBalance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StatusId)
                    </th>
                    <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Employees)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmpNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveOutStandingBalance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status.Description)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-eye"></i> Edit</a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-eye"></i> View</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        </<div>
        </div>
