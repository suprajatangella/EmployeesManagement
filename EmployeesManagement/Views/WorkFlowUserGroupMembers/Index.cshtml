@model IEnumerable<EmployeesManagement.Models.WorkFlowUserGroupMember>

@{
    ViewData["Title"] = "Work Flow User Group Member";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>Create New User Group Member</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Work Flow User Group Member List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkFlowUserGroup)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Approver)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SequenceNo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkFlowUserGroup.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sender.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Approver.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SequenceNo)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
