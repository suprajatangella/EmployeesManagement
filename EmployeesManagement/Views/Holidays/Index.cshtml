@model EmployeesManagement.ViewModels.HolidayViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Holidays List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>Add New Holiday</a>
</p>

<div class="card">
    <div class="card-body">
        <div class="col-md-12">
            <div class="row">
                
                    <form asp-action="Index" enctype="multipart/form-data" method="post" class="form-vertical">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-20">
                            <button type="submit" class="btn btn-success btn-block m-tb-10">
                                <i class="fa fa-search"></i>Search
                            </button>
                        </div>
                        <div class="col-md-20">
                            <button type="button" class="btn btn-default btn-reset m-tb-10">
                                <i class="fa fa-eraser"></i>Clear
                            </button>
                        </div>

                    </div>
                    </form>
                
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Holiday List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedById)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>

                    <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Holidays)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedById)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>

                        <td>
                            <a asp-action="Edit" class="fa fa-edit" asp-route-id="@item.Id">Edit</a> 
                        </td>
                        <td>
                            <a asp-action="Details" class="fa fa-eye" asp-route-id="@item.Id">Details</a>
                        </td>
                        <td>
                            <a asp-action="Delete" class="fa fa-trash" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
