@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "System Roles";
}

<h1>Users</h1>

<p>
    <a asp-action="Create"><i class="fa fa-plus"></i>Add new Role</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Roles</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Role No
                    </th>
                    <th>
                        Role Name
                    </th>

                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                                Action
                            </button>
                            <ul class="dropdown-menu">
                                <li class="dropdown-item"><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-edit"></i>Edit</a></li>
                                <li class="dropdown-divider"></li>
                                <li class="dropdown-item"><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-eye"></i>View</a></li>
                                <li class="dropdown-divider"></li>
                                <li class="dropdown-item"><a asp-action="UserRights" asp-controller="Profiles" asp-route-id="@item.Id" class="btn btn-secondary"><i class="fa fa-lock"></i>Assign Rights</a></li>

                            </ul>
                        </td>

                        @*  <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-eye"></i> Edit</a>
                    </td>
                    <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-eye"></i> View</a>
                    </td>
                    <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                    </td> *@
                    </tr>
                }
            </tbody>
        </table>
        </<div>
        </div>
