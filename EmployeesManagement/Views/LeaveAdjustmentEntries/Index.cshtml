@model IEnumerable<EmployeesManagement.Models.LeaveAdjustmentEntry>

@{
    ViewData["Title"] = "Leave Adjustments";
}

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>Add New LeaveAdjustmentEntry</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Leave Adjustment Entries</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LeavePeriod)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfDays)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LeaveAdjustmentDate)
                    </th>
                   
                    
                    <th>
                        @Html.DisplayNameFor(model => model.AdjustmentType.Description)
                    </th>
                    <th>View</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeavePeriod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfDays)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveAdjustmentDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdjustmentType.Description)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="fa fa-eye"></i>Details</a> 
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary"><i class="fa fa-eye"></i>Edit</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>